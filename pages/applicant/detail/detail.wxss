/* pages/applicant/detail/detail.wxss */
.container{ 
   padding-top: 0;
}

.head{
    flex-direction:row;
}

.detail{
    position: relative; 
    display: flex;
    margin-top: 0rpx;
    width: 50%
}

.type{
    font-size: 40rpx;
    overflow: hidden;
    margin: 10rpx 0rpx 10rpx 40rpx;
    padding: 10rpx 0rpx 10rpx 40rpx;
    border: 10rpx 0rpx 10rpx 40rpx;
    text-align: right;
    color: transparent;
    -webkit-text-stroke: 1px black;
    letter-spacing: 0.04em;
}

.content{
    flex-direction:column;
}

image{
   width:128rpx;
   height:128rpx;
   margin:50rpx;
   border-radius:50%;
}

.title{
    font-size: 33rpx;
    color:#000;
    margin-top: 5rpx;
    padding:0 4rem 0 15px;
    text-align: center;
}

.tag{
    font-size:25rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: block;
    text-align: center;
}

.exhibition{
    padding:0 0.2rem 0 5px;
    width: 15%;
}